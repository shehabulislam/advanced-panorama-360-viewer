{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "adv-pano-360/panorama-viewer",
    "version": "1.0.0",
    "title": "Advanced 360 Panorama Viewer",
    "category": "media",
    "icon": "format-image",
    "description": "Display a 360-degree panorama image or video.",
    "supports": {
        "html": false
    },
    "textdomain": "adv-pano-360",
    "attributes": {
        "clientId": { "type": "string", "default": "uniqueId" },
        "scene": {
            "type": "object",
            "default": {
                "title": "First Scene",
                "panorama": "https://i.ibb.co/tHGzz1H/upload-image.png",
                "hotSpots": []
            }
        },
        "defaultScene": {
        "type": "string",
        "default": ""
        },
        "options": {
            "type": "object",
            "default": {
                "autoLoad": true,
                "autoRotate": 0,
                "draggable": true,
                "showControls": true,
                "nextPrevBtn": false,
                "keyboardZoom": true,
                "mouseZoom ": true,
                "compass": false,
                "sceneFadeDuration": 1000,
                "preview": "",
                "default": {
                "firstScene": "0"
            }
        }
        },
        "controls": {
            "type": "object",
            "default": {}
        },
        "style": {
            "type": "object",
            "default": {
                "height": "400px",
                "width": "100%"
            }
        },
        "css": {
            "type": "string",
            "default": ""
        },
        "additional": {
            "type": "object",
            "default": {
                "Class": "",
                "ID": "",
                "CSS": ""
            }
        }
    },
    "editorScript": ["file:./index.js", "pannellum-2.5.6"],
    "editorStyle": ["file:./style-index.css", "pannellum-2.5.6"],
    "style": ["file:./style-index.css", "pannellum-2.5.6"],
    "viewScript": ["file:./frontend.js", "pannellum-2.5.6"],
    "render": "file:./render.php"
}